<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#990D2F50"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textColorHint="#ffffff"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_sellingamt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:focusable="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:hint="Selling Price"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#ffffff"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_gst_per"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:focusable="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:hint="Percentage"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/b2"
                android:padding="5dp"
                android:text="="
                android:textSize="17dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:weightSum="3">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#ffffff"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_tax_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:editable="false"
                    android:textStyle="bold|italic"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:hint="Tax Value"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#ffffff"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_basic_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:editable="false"
                    android:textStyle="bold|italic"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    android:gravity="center_vertical"
                    android:hint="Basic Value"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#ffffff"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_total_amt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:editable="false"
                    android:textStyle="bold|italic"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:hint="Total"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:pager_animation="Tablet"
        android:layout_margin="1dp"
        custom:pager_animation_span="1100" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/buttonBizwinger"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@drawable/b2"
                android:text="For Business Software"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="11dp"
                android:textStyle="bold"
                android:background="@drawable/b2"
                android:id="@+id/buttonRestro"
                android:text="For Restaurant Software"/>

        <Button
            android:id="@+id/buttonCable"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/b2"
            android:text="For Cable Billing Software"
            android:textSize="11dp"
            android:textStyle="bold" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:weightSum="2"
            android:background="#93000000"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textViewCall1"
                android:text="+91 8237712343"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_gravity="center"
                android:padding="1dp"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:drawableLeft="@drawable/call"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textViewCall2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/call"
                android:gravity="left"
                android:layout_gravity="center"
                android:padding="1dp"
                android:text="+91 8237712344"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
